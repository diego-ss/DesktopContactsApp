<UserControl x:Class="DesktopContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock FontSize="20" x:Name="nameTextBlock"
                                   Text="Name lastname"
                                   FontWeight="Bold"/>
            <TextBlock FontSize="12" x:Name="emailTextBlock"
                                   Text="email"
                                   Foreground="DodgerBlue"/>
            <TextBlock FontSize="12" x:Name="phoneTextBlock"
                                   Text="phonen number"
                                   FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
